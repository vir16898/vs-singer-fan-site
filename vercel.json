{
  "version": 2,
  "builds": [
    {
      "src": "server.ts",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/$1",
      "headers": {
        "x-vercel-rewrite": "next"
      }
    }
  ],
  "crons": [
    {
      "path": "/api/fetch_video",
      "schedule": "0 * * * *",
      "method": "POST",
      "body": { "singer": "Haruno Sora" }
    },
    {
      "path": "/api/fetch_video",
      "schedule": "0 * * * *",
      "method": "POST",
      "body": { "singer": "Hiyama Kiyoteru" }
    },
    {
      "path": "/api/fetch_video",
      "schedule": "0 * * * *",
      "method": "POST",
      "body": { "singer": "Frimomen" }
    }
  ]
}